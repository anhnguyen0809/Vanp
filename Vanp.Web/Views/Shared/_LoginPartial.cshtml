@using Microsoft.AspNet.Identity
@if (!Request.IsAuthenticated)
{
    <div class="login">
        <div class="user-circle">
            <a role="button" class="dropdown-toggle" href="/login" title="Đăng nhập vào tài khoản khách hàng">
                <i class="fa fa-user" aria-hidden="true"></i>
            </a>
        </div>
    </div>
    <div class="login">
        <div class="user-circle">
            <a role="button" class="dropdown-toggle" href="/register" title="Đăng ký tài khoản khách hàng">
                <i class="fa fa-pencil" aria-hidden="true"></i>
            </a>
        </div>
    </div>
}
else
{
    <div class="dropdown login logout">
        <div class="user-circle">
            <a role="button" data-toggle="dropdown" data-target="#" class="dropdown-toggle" href="/"> <i class="fa fa-user" aria-hidden="true"></i></a>
