
@{
    ViewBag.Title = "Quên mật khẩu?";
}
<div class="main-container col2-right-layout">
    <div class="main container">
        <div class="page-title text-center">
            <h3>Quên mật khẩu</h3>
        </div>
        <div class="box-alert">
            <div class="static-contain">
                <form class="comment-form register-form" action="@Url.Action("ForgotPassword", "Account")" method="post">
                    <div class="row">
                        <div class="col-md-12">
                            <p>Nhập địa chỉ email và chúng tôi sẽ gửi mật khẩu mới vào email của bạn</p>
                            <p class="comment-form-email"><input id="email" name="email" placeholder="vanp@gmail.com" value="" size="30" type="text"></p>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <p class="form-submit text-center">
                            <button name="btnSubmit" class="btn btn-secondary mt-ladda-btn" type="submit">Gửi Mật Khẩu Mới Vào Mail</button>
                        </p>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>