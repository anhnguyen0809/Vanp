@using Microsoft.AspNet.Identity
@if (!Request.IsAuthenticated)
{
    <div class="login">
        <div class="user-circle">
            <a role="button" class="dropdown-toggle" href="/login" title="Đăng nhập vào tài khoản khách hàng">
                <i class="fa fa-user" aria-hidden="true"></i>
            </a>
        </div>
    </div>
    <div class="login">
        <div class="user-circle">
            <a role="button" class="dropdown-toggle" href="/register" title="Đăng ký tài khoản khách hàng">
                <i class="fa fa-pencil" aria-hidden="true"></i>
            </a>
        </div>
    </div>
}
else
{
    <div class="dropdown login logout">
        <div class="user-circle">
            <a role="button" data-toggle="dropdown" data-target="#" class="dropdown-toggle" href="/"> <i class="fa fa-user" aria-hidden="true"></i></a>
            <div class="user-info dropdown-menu" role="menu">
                <a class="dropdown-item" href="/account/profile">
                    <span class="hidden-md-down">Thông tin cá nhân</span>
                </a>
                <a class="dropdown-item" href="/account/bidding">
                    <span class="hidden-md-down">Đang Tham Gia Đấu Giá</span>
                </a>
               
                @if (CurrentUser.Roles.Contains("Admin"))
                {
                    <div class="dropdown-divider "></div>
                    <a class="dropdown-item" href="/adminpages/">
                        <span class="hidden-md-down">Trang Quản Trị</span>
                    </a>
                }
                <div class="dropdown-divider "></div>
                <a  class="dropdown-item" href="/logout" title="" rel="nofollow">
                    <span class="hidden-md-down">Đăng xuất</span>
                </a>
            </div>
        </div>
    </div>
    <div class="top-cart-contain pull-right">
        <!-- Top Cart -->
        <div class="mini-cart">
            <div class="basket"> <a href="/account/wishlist" title="Danh sách yêu thích"> <i class="fa fa-heart" aria-hidden="true"></i> </a> </div>
        </div>
        <!-- Top Cart -->
        <div id="ajaxconfig_info" style="display:none">
            <a href="#/"></a>
            <input value="" type="hidden">
            <input id="enable_module" value="1" type="hidden">
            <input class="effect_to_cart" value="1" type="hidden">
            <input class="title_shopping_cart" value="Go to shopping cart" type="hidden">
        </div>
    </div>
}
