
@if (ViewData["Success"] != null)
{
    <div id="alert-success" class="alert alert-info alert-absolute">
        <div class="container">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            @ViewData["Success"]
        </div>
    </div>
    TempData["Success"] = null;     
}

@if (ViewData["Failure"] != null)
{
    <div id="alert-failure" class="alert alert-danger alert-absolute">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        @ViewData["Failure"]
    </div>
    TempData["Failure"] = null;      
}