                                                    <!-- End Item -->

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>*@
                            <article class="col-main">
                                <div class="page-title">
                                    @if (!String.IsNullOrEmpty(ViewBag.Search))
                                    {
                                        <div class="keyword"><a>Từ khóa</a> : @ViewBag.Search</div>
                                    }
                                    @if (!String.IsNullOrEmpty(ViewBag.CategoryName))
                                    {
                                        <h2>@ViewBag.CategoryName</h2>
                                    }
                                </div>
                                <div class="products">
                                    @Html.Partial("~/Views/Shared/_ProductsPartial.cshtml")
                                </div>
                            </article>
                            <!--	///*///======    End article  ========= //*/// -->
                        </div>
                        <div class="col-left sidebar col-sm-3 col-xs-12 col-sm-pull-9">
                            <aside class="col-left sidebar">
                                <div class="side-nav-categories">
                                    <div class="block-title">Categories</div>
                                    <!--block-title-->
                                    <!-- BEGIN BOX-CATEGORY -->
                                    <div class="box-content box-category">
                                        @Html.Action("GetList", "Category")
                                    </div>
                                    <!--box-content box-category-->
                                </div>
                                <div class="side-banner">
                                    <img src="~/images/sidebanner.jpg">
                                </div>
                            </aside>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Main Container End -->
    </div>
</div>

@section Scripts {
    <script src="~/Scripts/apps/obj/product.js"></script>
    <script src="~/Scripts/apps/products.js"></script>
    <script>
        /*                category: $.isNumeric(location.href.split('/').pop()) ? location.href.split('/').pop() : null*/
        jQuery(document).ready(function () {
            Products.setDataFilter({
                pageSize: 10,
                pageNo: 1,
                orderBy: "dateto",
                asc: false,
                categories: Vanp.getURLParameter('cats'),
                search: Vanp.getURLParameter('search')
            });
            Products.setUrlAction("/Product/GetProducts");
            Products.init();
        });
    </script>
}
