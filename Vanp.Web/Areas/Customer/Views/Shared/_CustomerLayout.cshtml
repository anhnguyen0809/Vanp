
@{
    ViewBag.Title = "_CustomerLayout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/layout/css/layout.css" rel="stylesheet" />
<link href="~/Content/layout/themes/light.css" rel="stylesheet" />
@RenderSection("css",required:false)
<div class="page-container">
    <div class="page-sidebar navbar-collapse collapse">
        <!-- BEGIN SIDEBAR MENU -->
        <ul class="page-sidebar-menu  page-header-fixed page-sidebar-menu-light " data-keep-expanded="false" data-auto-scroll="true" data-slide-speed="200">
            <li class="sidebar-toggler-wrapper hide">
                <div class="sidebar-toggler">
                    <span></span>
                </div>
            </li>
            <li class="sidebar-avartar-wrapper">
                <!-- BEGIN RESPONSIVE QUICK SEARCH FORM -->
                <div class="sidebar-user">
                    <img src="~/images/users/admin.jpg" class="avartar img-circle" />
                    <div class="username">
                        @CurrentUser.FullName
                    </div>
                    <div class="role">
                        @CurrentUser.Roles
                    </div>
                    <div class="">
                        <a class="nav-link" href="/"><i class="icon-home"></i></a> <span style="margin : 0 7px">\</span>
                        <a class="nav-link" href="/logout"><i class="icon-logout"></i></a>
                    </div>
                </div>
                <!-- END RESPONSIVE QUICK SEARCH FORM -->
            </li>
            <li class="heading">
                <h3 class="text-uppercase">Tài khoản</h3>
            </li>
            <li class="nav-item active ">
                <a href="/account/profile" class="nav-link nav-toggle">
                    <i class="icon-user"></i>
                    <span class="title">Thông Tin Tài Khoản</span>
                </a>
            </li>
            <li class="nav-item  ">
                <a href="/account/sendrequest" class="nav-link nav-toggle">
                    <i class="icon-refresh"></i>
                    <span class="title">Gửi Yêu Cầu Đăng Sản Phẩm</span>
                </a>
            </li>
            <li class="heading">
                <h3 class="text-uppercase">Sản phẩm</h3>
            </li>

            <li class="nav-item  ">
                <a href="/customer/listproduct" class="nav-link nav-toggle">
                    <i class="icon-heart"></i>
                    <span class="title">Quản Lý Sản Phẩm</span>
                </a>
            </li>
            <li class="nav-item  ">
                <a href="/product/insert" class="nav-link nav-toggle">
                    <i class="fa fa-buysellads"></i>
                    <span class="title">Đăng bán</span>
                </a>
            </li>
            <li class="heading">
                <h3 class="uppercase">Pages</h3>
            </li>
            <li class="nav-item  ">
                <a href="javascript:;" class="nav-link nav-toggle">
                    <i class="icon-list"></i>
                    <span class="title">Danh Sách Sản Phẩm </span>
                    <span class="arrow"></span>
                </a>
                <ul class="sub-menu">
                    <li class="nav-item  ">
                        <a href="layout_blank_page.html" class="nav-link ">
                            <span class="title">Yêu Thích</span>
                        </a>
                    </li>
                    <li class="nav-item  ">
                        <a href="layout_ajax_page.html" class="nav-link ">
                            <span class="title">Đang Tham Gia Đấu Giá</span>
                        </a>
                    </li>
                    <li class="nav-item  ">
                        <a href="layout_ajax_page.html" class="nav-link ">
                            <span class="title">Đã Thắng</span>
                        </a>
                    </li>
                </ul>
            </li>
            <li class="nav-item  ">
                <a href="javascript:;" class="nav-link nav-toggle">
                    <i class="icon-notebook"></i>
                    <span class="title">Lịch sử đấu giá</span>
                </a>
            </li>

        </ul>
        <!-- END SIDEBAR MENU -->
    </div>
    <div class="page-content-wrapper">
        <div class="page-content">
            @RenderBody()
        </div>

    </div>
</div>
</div>
@section Scripts
{
    <script src="~/Content/layout/js/layout.js"></script>
    @RenderSection("Scripts", false);
}